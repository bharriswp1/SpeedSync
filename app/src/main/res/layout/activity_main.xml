<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.brandonharris.speedsync.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_margin="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sendButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:foreground="@drawable/ic_file_upload_black_24dp"
                android:minHeight="100dp"
                android:minWidth="100dp"
                android:padding="0dp"
                android:layout_marginRight="5dp" />

            <Button
                android:id="@+id/receiveButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:foreground="@drawable/ic_file_download_black_24dp"
                android:minHeight="100dp"
                android:minWidth="100dp"
                android:padding="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_margin="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/syncButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="5dp"
                android:foreground="@drawable/ic_sync_black_24dp"
                android:minHeight="100dp"
                android:minWidth="100dp"
                android:padding="0dp"
                android:layout_marginRight="5dp" />

            <Button
                android:id="@+id/settingsButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:foreground="@drawable/ic_settings_black_24dp"
                android:minHeight="100dp"
                android:minWidth="100dp"
                android:padding="0dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
